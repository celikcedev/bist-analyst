# =============================================================================
# BIST Analyst - Production Environment Variables
# =============================================================================
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to git!

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_DB=bist_analyst
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD_HERE

# -----------------------------------------------------------------------------
# Backend Configuration
# -----------------------------------------------------------------------------
FLASK_ENV=production
PORT=5001
SECRET_KEY=YOUR_SECRET_KEY_HERE

# Database URL (automatically constructed from above)
# DATABASE_URL is set in docker-compose.prod.yml

# CORS Origins (comma-separated)
CORS_ORIGINS=https://hisseleme.com,https://screener.hisseleme.com

# -----------------------------------------------------------------------------
# Telegram Configuration (Optional)
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN
TELEGRAM_CHAT_IDS=YOUR_CHAT_ID1,YOUR_CHAT_ID2

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=https://api.hisseleme.com
NODE_ENV=production

# -----------------------------------------------------------------------------
# TradingView Data Feed (for market data)
# -----------------------------------------------------------------------------
TV_USERNAME=
TV_PASSWORD=

