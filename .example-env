# BIST Analyst - Environment Configuration
# =========================================
# Copy this file to .env and fill in your actual values
# Command: cp .example-env .env

# Database Configuration
DB_USER=postgres
DB_PASS= password type here
DB_HOST=localhost
DB_NAME=DB Name type here

# TradingView Credentials
TV_USERNAME=username or email
TV_PASSWORD=password type here

# Telegram Bot Configuration
# Single user (comma-separated for multiple):
TELEGRAM_BOT_TOKEN= token from botfather
TELEGRAM_CHAT_ID= chat id of the user you want to send the messages to
# Note: Get your chat ID from @userinfobot on Telegram
# Add multiple chat IDs separated by commas (no spaces)
ENABLE_TELEGRAM=true

# Scanner Configuration
ENABLE_AUTO_SCAN=true
SCAN_AFTER_UPDATE=true

# Logging
LOG_LEVEL=INFO

